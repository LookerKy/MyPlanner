<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계획 목표: "
        android:textSize="20dp"
        android:id="@+id/plan_target"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/plan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계획명: "
        android:textSize="20dp"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:width="200dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/plan_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:id="@+id/editText"
        android:layout_alignBaseline="@+id/plan_target"
        android:layout_alignBottom="@+id/plan_target"
        android:layout_toEndOf="@+id/plan_target" />
    <Button
        android:id="@+id/startT_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시작 시간 설정"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/endT_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="종료 시간 설정"
        android:layout_below="@+id/startT_btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginTop="29dp"
        android:textSize="20dp"
        android:text="시작 시간: " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="36dp"
        android:textSize="20dp"
        android:text="종료 시간: " />

    <TextView
        android:id="@+id/time_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/textView4"
        android:textSize="20dp"
        android:text="" />

    <TextView
        android:id="@+id/time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/time_now"
        android:layout_alignTop="@+id/textView5"
        android:textSize="20dp"
        android:text="" />

    <Button
        android:id="@+id/make_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일정 생성"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/endT_btn"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>